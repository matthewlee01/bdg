// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id        String   @id
  group     Group?   @relation(fields: [groupId], references: [id])
  groupId   String?
}

model Group {
  id        String   @id
  demerits  Int
  points    Int
  players   Player[]
}